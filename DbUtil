package com.quiz.util;

import java.sql.*;

public class DBUtil {
    private static final String URL = "jdbc:mysql://localhost:3306/quiz_portal?useSSL=false&serverTimezone=UTC";
    private static final String USER = "root";             // change
    private static final String PASS = "root_password";    // change

    static {
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
        } catch (ClassNotFoundException e) {
            throw new RuntimeException(e);
        }
    }

    public static Connection getConnection() throws SQLException {
        return DriverManager.getConnection(URL, USER, PASS);
    }

    public static void close(AutoCloseable ac) {
        if (ac == null) return;
        try { ac.close(); } catch (Exception e) { /* ignore */ }
    }
}
